
<div class="container mt-5">
  <h1 class="text-center">Post a Movie</h1>
  <form action="/movies/create" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="reviewTitle">Title of the movie</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="Enter a title for your review">
    </div>
    <br>
    <div class="form-group">
      <label for="reviewTitle">Movie Image URL</label>
      <input type="file" id="imgUrl" class="form-control" name="movieImg">
    </div>
    <br>
     <div class="form-group">
      <label for="reviewTitle">Genre</label>
      <input type="text" class="form-control" id="genre" name="genre" placeholder="Enter a year for your review">
    </div>
    <br>
    <div class="form-group">
      <label for="reviewTitle">Year</label>
      <input type="number" class="form-control" id="year" name="year" placeholder="Enter a year for your review">
    </div>
    <br>
    <div class="form-group">
      <label for="reviewContent">Your Review:</label>
      <textarea class="form-control" id="reviewLink" name="content" rows="8" placeholder="Write your review here"></textarea>
    </div>
    <br>
    <div class="form-group">
      <label for="score">Score:</label>
        <input type="number" id="score" name="score" required>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>




