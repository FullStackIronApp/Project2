<!DOCTYPE html>
<html>
<head>
  <title>{{ title }}</title>
</head>
<body>
  <h1>{{ title }}</h1>
  <form action="/movies/create" method="POST" enctype="multipart/form-data">
    <label for="title">Movie Title:</label>
    <input type="text" id="title" name="title" required>
    <br>
    <label for="year">Year:</label>
    <input type="number" id="year" name="year" required>
    <br>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" required>
    <br>
    <label for="movieImg">Movie Image URL:</label>
    <input type="file" id="imgUrl" name="movieImg" required>
    <br>
    <label for="content">Review Link:</label>
    <input type="text" id="reviewLink" name="content" required>
    <br>
    <label for="score">Score:</label>
    <input type="number" id="score" name="score" required>
    <br>
    <button type="submit">Create</button>
  </form>
</body>
</html>





