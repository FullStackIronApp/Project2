<div id="form">
  <h2>Signup</h2>
  <form action="/profile/{{userInSession._id}}/edit" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="username" value="{{userInSession.username}}"/>
    </label>

    <label> Email
      <input name="email" placeholder="rockstar@ironhack.com" value="{{userInSession.email}}"/>
    </label>

   <label> Profile Picture
    <input type="file" value="{{userInSession.profileUrl}}"/>
   </label>

    <button type="submit">Edit Profile</button>
    
    

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>