<div class="text-center mt-4">
  <img src="{{userInSession.profileUrl}}" alt="Profile Picture" class="rounded-circle" style="width: 300px; height:300px; border: 3px solid #455D7A;" >
  <div class="d-flex justify-content-center">
    <form class="form-inline mt-3 w-50" action="/profile/{{userInSession._id}}/edit" method="POST" enctype="multipart/form-data">

      <div class="row mt-4 mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
          <input type="username" class="form-control" id="inputEmail3" value="{{userInSession.username}}" name="username" />
        </div>
      </div>
      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inputEmail3" value="{{userInSession.email}}" name="email"/>
        </div>
      </div>
      <div class=" row mb-3">
        <label for="profileUrl" class="col-sm-2 col-form-label">Profile Picture</label>
        <div class="col-sm-10" >
          <input type="file" class="form-control"  value="{{userInSession.profileUrl}}" name="profileUrl"/>
        </div>
      </div>
      <div class=" row mb-3">
        <div class="col-sm-10 offset-sm-2">
        </div>
      </div>
      <button type="submit" style="width:8rem" class="btn btn-warning">Edit Profile</button>
    </form>
  </div>

  <div id="form" class="text-center mt-2 mb-4">
    <form action="/profile/{{userInSession._id}}/delete" method="POST">
      <button type="submit" style="width:8rem" class="btn btn-danger">Delete Profile</button>
    </form>
  </div>
</div>

