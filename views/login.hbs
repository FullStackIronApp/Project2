
<div class="text-center mt-4">
  <h1>Log in</h1>

<div class="d-flex justify-content-center">
  <form class="form-inline mt-3 w-50" action="/login" method="POST">
    <label class="sr-only" for="inlineFormInputName2">Username</label>
    <input type="text" name="username" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="Username">

    <div class="form-group mb-2">
      <label for="inputPassword6">Password</label>
      <input type="password" name="password" id="inputPassword6" class="form-control mx-sm-0" aria-describedby="passwordHelpInline" placeholder="********">
    </div>

    <button type="submit" class="btn btn-primary mb-2">Log in</button>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>
</div>
